{{#section 'css'}}
<link rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}

{{#section 'js'}}
<script
  src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js">
</script>
<script>
    $('#dob').datetimepicker({
        format: 'd/m/Y',
        value: '{{user.dob}}',
        timepicker: false,
        mask: true
    });
</script>
{{/section}}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Cập nhật thông tin cá nhân</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form method="POST" action="/user/update">
                <div class="form-group">
                    <label for="name">Họ tên</label>
                    <input type="text" class="form-control" id="full_name" name="full_name" value="{{user.full_name}}">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" value="{{user.email}}">
                </div>
                {{#if (ifCond user.role '==' '3')}}
                <div class="form-group">
                    <label for="writername">Bút danh</label>
                    <input type="text" class="form-control" id="pseudonym" name="pseudonym" value="{{user.pseudonym}}">
                </div>
                {{/if}}
                <div class="form-group">
                    <label for="dob">Ngày tháng năm sinh</label>
                    <input type="text" class="form-control" id="dob" name="dob">
                </div>
                <center> <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> Cập nhật</button>
                </center>
            </form>
            {{#if msg}}
                {{#if err}}
                    {{#each msg}}
                    <div class="alert alert-danger" role="alert" style="margin-top:10px;">
                        {{this}}
                    </div>
                    {{/each}}
                {{else}}
                    {{#each msg}}
                    <div class="alert alert-success" role="alert" style="margin-top:10px;">
                        {{this}}
                    </div>
                    {{/each}}
                {{/if}}
            {{/if}}
        </div>
    </div>
</div>