<style>
    .carousel-item>img {
        max-height: 500px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    Nổi bật tuần
                </div>
                <div class="card-body">
                    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            {{!-- <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
                            <li data-target="#carouselExampleCaptions" data-slide-to="2"></li> --}}
                        {{#each this.top3ArticlesByView}}
                        {{#if (ifCond @index '==' '0')}}
                            <li data-target="#carouselExampleCaptions" data-slide-to="{{@index}}" class="active"></li>
                        {{else}}
                            <li data-target="#carouselExampleCaptions" data-slide-to="{{@index}}"></li>
                        {{/if}}
                        {{/each}}
                        </ol>
                        
                        <div class="carousel-inner">
                            {{#each this.top3ArticlesByView}}
                            <div class="carousel-item {{#if (ifCond @index '==' '0')}}active{{/if}}">
                                <img src="/public/images/featured/img1.jpg" class="d-block w-100" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <a href="/view/post/{{article_id}}/" style="color: #5bc4d9;"><h3><b>{{subCategoryName}}:&nbsp</b>{{title}}</h3></a>
                                    <p>{{published_time}}</p>
                                    <p>{{abstract}}</p>
                                </div>
                            </div>
                            {{/each}}
                        </div>
                        
                        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button"
                            data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button"
                            data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <hr>

            {{#each this.topArticlesByEachCategory}}
            <h4><b>{{category_name}}</b></h4>
            <div class="card mb-3">
                <div class="no-gutters d-flex flex-row">
                    <img src="/public/images/category/img3.jpg" alt="...">
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><a href="/view/post/{{article_id}}">{{title}}</a></h5>
                            <p class="card-text">{{abstract}}</p>
                            <p class="card-text"><small class="text-muted">{{published_time}}</small></p>
                        </div>
                    </div>
                </div>
            </div>
            <hr>
            {{/each}}

        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    Mới nhất
                </div>
                <div class="card-body">
                {{#each this.topArticlesByTime}}
                <div class="row">
                    {{#if this.a1}}
                        <div class="col-md-6">
                            <div class="card-item">
                                <div class="row">
                                    <div class="col-md-5">
                                        <img src="/public/images/category/img1.jpg" alt="..." style="max-width: 200px; max-height: 100px;">
                                    </div>
                                    <div class="col-md-7">
                                        <p style="margin-bottom: 2px;"><a href="/view/post/{{this.a1.article_id}}">{{this.a1.title}}</a></p>
                                        <p style="margin-bottom: 2px;"><small class="text-muted">{{this.a1.subCategoryName}}</small></p>
                                        <p style="margin-bottom: 2px;"><small class="text-muted">{{this.a1.published_time}}</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                    {{#if this.a2}}
                        <div class="col-md-6">
                            <div class="card-item">
                                <div class="row">
                                    <div class="col-md-5">
                                        <img src="/public/images/category/img1.jpg" alt="..." style="max-width: 200px; max-height: 100px;">
                                    </div>
                                    <div class="col-md-7">
                                        <p style="margin-bottom: 2px;"><a href="/view/post/{{this.a2.article_id}}">{{this.a2.title}}</a></p>
                                        <p style="margin-bottom: 2px;"><small class="text-muted">{{this.a2.subCategoryName}}</small></p>
                                        <p style="margin-bottom: 2px;"><small class="text-muted">{{this.a2.published_time}}</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                </div>
                <hr class="mt-3 mb-3">
                {{/each}}
            </div>
            </div>
            <div class="card" style="margin-top: 10px;">
                <div class="card-header">
                    Xem nhiều
                </div>
                <div class="card-body">
                {{#each this.topArticlesByView}}
                    <div class="row">
                    {{#if this.a1}}
                        <div class="col-md-6">
                            <div class="card-item">
                                <div class="row">
                                    <div class="col-md-5">
                                        <img src="/public/images/category/img1.jpg" alt="..." style="max-width: 200px; max-height: 100px;">
                                    </div>
                                    <div class="col-md-7">
                                        <p style="margin-bottom: 2px;"><a href="/view/post/{{this.a1.article_id}}">{{this.a1.title}}</a></p>
                                        <p style="margin-bottom: 2px;"><small class="text-muted">{{this.a1.subCategoryName}}</small></p>
                                        <p style="margin-bottom: 2px;"><small class="text-muted">{{this.a1.published_time}}</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                    {{#if this.a2}}
                        <div class="col-md-6">
                            <div class="card-item">
                                <div class="row">
                                    <div class="col-md-5">
                                        <img src="/public/images/category/img1.jpg" alt="..." style="max-width: 200px; max-height: 100px;">
                                    </div>
                                    <div class="col-md-7">
                                        <p style="margin-bottom: 2px;"><a href="/view/post/{{this.a2.article_id}}">{{this.a2.title}}</a></p>
                                        <p style="margin-bottom: 2px;"><small class="text-muted">{{this.a2.subCategoryName}}</small></p>
                                        <p style="margin-bottom: 2px;"><small class="text-muted">{{this.a2.published_time}}</small></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                </div>
                <hr class="mt-3 mb-3">   
                {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>