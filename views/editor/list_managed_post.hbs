                <td>
                    {{#if (ifCond editor '===' 'Bạn')}}
                    <b>{{editor}}</b>
                    {{else}}
                    {{editor}}
                    {{/if}}
                </td>
                <td>
                    {{reason}}
                </td>
                <td>
                    {{#if (ifCond state '==' '4')}}
                    <button type="button" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#declineModal"
